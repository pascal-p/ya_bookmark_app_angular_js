<!doctype html>
<html lang="en" ng-app="App_<%= @example %>">
  <head>
    <meta charset="utf-8">
    <title>Bookmarking App</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="navbar navbar-inverse">
      <div class="navbar-inner">
        <ul class="nav">
          <% @examples.each do |example| %>
            <li <%- if example[:active] %>class="active"<% end %>>
              <a href="/example/<%= example[:example] %>"><%= example[:label] %></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Bookmarking App</h1>
          <hr>
          <div class="row">
            <%= @example_template %>
          </div>
        </div>
      </div>
    </div>
  </body>
  <!--  <script src="/lib/sugar/sugar-1.3.9.min.js"></script> -->
  <script src="/js/angular.min.js"></script>
  <script src="/js/angular-resource.min.js"></script>
  <% @examples.each do |example| %>
    <script src="/app/<%= example[:example] %>/app.js"></script>
  <% end %>
</html>
